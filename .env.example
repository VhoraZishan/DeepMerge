# CMLRE Marine Data Platform - Environment Variables

# Application Settings
APP_NAME=CMLRE Marine Data Platform
ENV=development
DEBUG=true
API_V1_STR=/api/v1
SECRET_KEY=change-me-to-a-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/cmlre
ALEMBIC_DATABASE_URL=postgresql://postgres:postgres@db:5432/cmlre

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# MinIO (S3-compatible) Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=cmlre-raw
MINIO_SECURE=false

# Google Gemini API (for AI features)
GEMINI_API_KEY=your-gemini-api-key-here

# Feature Flags
PROMETHEUS_ENABLED=true

# External Service Configurations
# INCOIS ERDDAP Server
INCOIS_ERDDAP_URL=https://erddap.incois.gov.in/erddap

# CMFRI API (if available)
CMFRI_API_URL=https://cmfri-api.example.com

# IBP API (if available)
IBP_API_URL=https://ibp-api.example.com

# NCBI API (if available)
NCBI_API_KEY=your-ncbi-api-key-here
